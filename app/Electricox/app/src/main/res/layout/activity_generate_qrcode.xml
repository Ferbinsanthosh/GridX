<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

    android:padding="20dp">

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white">

        <!-- Inner Layout with Padding and Underlines -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Employee Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Employee Name:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_medium" />
                <TextView
                    android:id="@+id/QRName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_medium" />
            </LinearLayout>

            <!-- Slot Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Slot:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_medium" />
                <TextView
                    android:id="@+id/QRSlotNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A2"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_medium" />
            </LinearLayout>

            <!-- Parking Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Parking Time:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_medium" />
                <TextView
                    android:id="@+id/QrParkingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 AM"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_medium" />
            </LinearLayout>

            <!-- Booking ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Booking ID:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_medium" />
                <TextView
                    android:id="@+id/QrBookingId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_medium" />
            </LinearLayout>

            <!-- Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Address:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_medium" />
                <TextView
                    android:id="@+id/QRaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123 Main St"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_medium" />
            </LinearLayout>

            <!-- Phone Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_medium" />
                <TextView
                    android:id="@+id/QRphoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1234567890"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_medium" />
            </LinearLayout>

            <!-- Driving Licence -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Driving Licence:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_medium" />
                <TextView
                    android:id="@+id/QrDrivingLicence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DL12345"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_medium" />
            </LinearLayout>

            <!-- Generate QR Code Button -->
            <Button
                android:id="@+id/GenerateQrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/myPrimary"
                android:text="Generate QR Code"
                android:textColor="@android:color/white"
                android:fontFamily="@font/quicksand_medium"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textSize="14sp" />

            <!-- QR Code Image -->
            <ImageView
                android:id="@+id/Qrview"
                android:layout_width="match_parent"
                android:layout_height="193dp"
                android:src="@drawable/logon"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:layout_marginTop="15dp" />

            <!-- Send to User Button -->
            <Button
                android:id="@+id/sendToUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/myPrimary"
                android:text="Send to User"
                android:textColor="@android:color/white"
                android:fontFamily="@font/quicksand_medium"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginTop="10dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
